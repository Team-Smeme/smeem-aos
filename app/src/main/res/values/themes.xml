<resources>
    <!-- Base application theme. -->
    <style name="Theme.Smeem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/point</item>
        <item name="colorPrimaryVariant">@color/point</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/point_inactive</item>
        <item name="colorSecondaryVariant">@color/point_inactive</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Neutral brand color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/gray_100</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>

        <!-- etc -->
        <item name="colorControlActivated">@color/point</item>
        <item name="colorControlNormal">@color/point</item>
        <item name="materialButtonStyle">@style/Widget.Smeem.Button</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Smeem.BottomSheetDialog</item>
        <item name="android:timePickerStyle">@style/Widget.Smeem.TimePicker</item>
        <item name="snackbarStyle">@style/Widget.Smeem.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Smeem.Snackbar.TextView</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Smeem.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.Smeem.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Smeem.BottomSheetDialog</item>
    </style>
    
    <style name="ThemeOverlay.Smeem.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:backgroundTint">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Widget.MaterialAlertDialog.Smeem.Title.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Smeem.Button.Dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Smeem.Button.Dialog</item>
    </style>

</resources>