<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- widget -->
    <style name="Widget.Smeem.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="Widget.Smeem.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:background">@drawable/selector_write_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.Smeem.BottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Smeem.BottomSheet</item>
    </style>

    <style name="Widget.Smeem.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/snackbar</item>
        <item name="shapeAppearanceOverlay">@drawable/shape_snackbar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Smeem.Snackbar.TextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Smeem.Caption2_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Smeem.Button.Dialog" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.Smeem.Body2_semibold</item>
    </style>

    <style name="Widget.MaterialAlertDialog.Smeem.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textAppearance">@style/TextAppearance.Smeem.Subtitle3_medium</item>
    </style>

    <style name="Widget.Smeem.TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="ShapeAppearance.Smeem.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>

        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="kakao">
        <item name="android:background">@color/kakao</item>
        <item name="android:radius">30dp</item>
        <item name="android:shape">ring</item>
    </style>

    <style name="goal_button_inactive">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <style name="goal_button_active">
        <item name="android:backgroundTint">@color/point</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="day_active">
        <item name="android:background">@color/point</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Style.Smeem.Text" parent="">
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
        <item name="android:textColorHighlight">@color/point_opacity_30</item>
    </style>


    <!-- TopSheet_Dialog Animation -->
    <style name="TopSheet_DialogAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_out_from_top</item>
        <item name="android:windowExitAnimation">@animator/slide_back_to_top</item>
    </style>
</resources>