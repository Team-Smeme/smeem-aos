<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="18dp"
    android:paddingTop="40dp"
    android:paddingBottom="40dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="작성하기"
            android:textAppearance="@style/TextAppearance.Smeem.Headline3"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_bottom_foreign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"

            app:layout_constraintTop_toBottomOf="@id/tv_header">

            <TextView
                android:id="@+id/tv_foreign_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="외국어로 바로 "
                android:textAppearance="@style/TextAppearance.Smeem.Body3_medium"
                android:textColor="@color/point"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toEndOf="@id/tv_foreign_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_foreign_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="작성하기"
                android:textAppearance="@style/TextAppearance.Smeem.Body3_medium"
                app:layout_constraintStart_toEndOf="@id/tv_foreign_orange"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_bottom_native"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="26dp"

            app:layout_constraintTop_toBottomOf="@id/layout_home_bottom_foreign">

            <TextView
                android:id="@+id/tv_korean_orange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="한국어로 먼저 "
                android:textAppearance="@style/TextAppearance.Smeem.Body3_medium"
                android:textColor="@color/point"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_korean_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:text="작성하기"
                android:textAppearance="@style/TextAppearance.Smeem.Body3_medium"
                app:layout_constraintStart_toEndOf="@id/tv_korean_orange"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>