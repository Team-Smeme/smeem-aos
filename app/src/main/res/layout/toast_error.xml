<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_toast_error"
    android:paddingStart="36dp"
    android:paddingBottom="38dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_toast_error"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_warning"
        app:layout_constraintTop_toTopOf="@id/tv_toast_error"
        app:layout_constraintBottom_toBottomOf="@id/tv_toast_error_detail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_toast_error"
        android:layout_width="wrap_content"
        tools:text="인터넷 연결을 확인해 주세요 :("
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/iv_toast_error"
        android:layout_marginStart="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.Smeem.Caption1_bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_toast_error_detail"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_toast_error"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@id/tv_toast_error"
        android:textAppearance="@style/TextAppearance.Smeem.Caption4_regular_12"
        android:text="재접속하거나 나중에 다시 시도해 주세요."
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>